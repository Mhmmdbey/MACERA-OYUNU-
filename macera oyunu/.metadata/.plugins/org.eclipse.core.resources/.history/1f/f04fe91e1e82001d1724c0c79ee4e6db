
public class Player {

	
	private int damage,healthy,money;
	private String name, cName;
    private Inventory inv;
    
    public Player(String name) {
		
		this.name = name;
	}
	
    public void selectCha() {
    	
    	charMenu();
    	
    }
    public void charMenu() {
    	
    	System.out.println("Lutfen Karakter Seciniz:");
    	System.out.println("Turu: -Samuray, Hasar:5, Saglık:21, Para:15");
    	System.out.println("Turu: -Okcu, Hasar:7, Saglık:18, Para:20");
    	System.out.println("Turu: -Sovalye, Hasar:8, Saglık:24, Para:5");
    
    }
    
    public int getDamage() {
		return damage;
	}

	public void setDamage(int damage) {
		this.damage = damage;
	}

	public int getHealthy() {
		return healthy;
	}

	public void setHealthy(int healthy) {
		this.healthy = healthy;
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getcName() {
		return cName;
	}

	public void setcName(String cName) {
		this.cName = cName;
	}

	public Inventory getInv() {
		return inv;
	}

	public void setInv(Inventory inv) {
		this.inv = inv;
	}

	












}
